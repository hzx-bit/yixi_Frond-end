<!--pages/home/home.wxml-->

<view class="infomation">
  <button class="avatar" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
  <image src="{{avatarUrl}}" mode="heightFix"></image>
</button>
<input type="nickname" class="weui-input" placeholder="请输入昵称"/>
</view>
<van-divider />
<view class="item" bindtap="writedetail">
<image src="/icon/certification.png" mode="heightFix"></image>
<text>校友认证</text>
<image src="/icon/next.png" mode="heightFix" class="next"></image>
</view>
<view class="item" bindtap="naviToFAQ">
<image src="/icon/FAquestions.png" mode="heightFix"></image>
<text>常见问题</text>
<image src="/icon/next.png" mode="heightFix" class="next"></image>
</view>
<view class="item" bindtap="naviToAboutus">
<image src="/icon/aboutus.png" mode="heightFix"></image>
<text>关于我们</text>
<image src="/icon/next.png" mode="heightFix" class="next"></image>
</view>

<view class="item" bindtap="naviToVphoto">
<image src="/icon/camera.png" mode="heightFix"></image>
<text>虚拟合影</text>
<image src="/icon/next.png" mode="heightFix" class="next"></image>
</view>