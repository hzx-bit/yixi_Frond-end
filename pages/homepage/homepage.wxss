/* pages/home/home.wxss */
.infomation {
  display: flex;
  align-items: center;
  height: 220rpx;
  margin: 0 20rpx;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}
.avatar image {
    height: 100%;
    border-radius: 80rpx;
    margin-left: -28rpx;
}
.infomation .weui-input {
  margin: 60rpx;
  font-size: 28rpx;
}
.line {
  width: 700rpx;
  margin: 20rpx auto 60rpx;
  background-color: #ddd;
  height: 5rpx;
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  margin: 15rpx 20rpx;
  border: #666 1rpx solid;
  border-radius: 8rpx;
}
.item image{
  height: 60rpx;
  margin-left: 40rpx;
}

.item .next {
  height: 40rpx;
  margin-right: 30rpx;
}