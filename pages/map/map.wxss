/* pages/map/map.wxss */
.maparea {
  position: relative;
  display: block;
}
.mapimg {
  width: 750rpx;
}
.icon {
  display: block;
  width: 32rpx;
  height: 32rpx;
  margin: 0 auto;
}
.loc {
  width: 100rpx;
  text-align: center;
  font-size: 14rpx;
  font-weight: 700;
  color: lightyellow;
  position: absolute;
  z-index: 3;
}
.info {
  position: absolute;
  left: 0;
  top: 0;
  width: 250rpx;
  height: 100%;
  opacity: 0.4;
  background-color:lightcoral;
  z-index: 2;
}
.picker {
  position: absolute;
  right: 0;
  top: 0;
  width: 80rpx;
  text-align: center;
  background-color: lightgrey;
  border-radius: 6rpx;
}