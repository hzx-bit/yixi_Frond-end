.head-bg{
  width: 850rpx;
  height: 440rpx;
  z-index: 0;
  background-size: 100% 100%;
}
.menu{
  display: flex;/*弹性布局*/
  flex-wrap: wrap;
}  

.menu_item{
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
  
.menu_img{  
  width: 350rpx;
  height: 250rpx;
}

.btn {
  display: inline-block;
  margin: 10px;
  padding: 1em 2em;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  font-weight: 400;
  text-align: center;
  box-shadow: 0px 2px 4px #67c0f0,0px 1px 2px #bf2fcb;
  width: 200px;
  height: 80px;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 2px;
  color: #67c0f0;
}
